@model IEnumerable<TesteEdeployNet.GabrielFaria.ViewModel.ViewCidadeViewModel>

@if (Model.Count() > 0)
{
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>Pontuação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.Label(item.Nome)</td>
                <td>@Html.Label(item.Estado)</td>
                <td>
                    <a href="#" onclick="verPontuacao('@item.Nome', '@item.Estado')">Ver pontuação</a>
                </td>

            </tr>
            }
        </tbody>
    </table>
}
else
{
    <label>Sem resultados</label>
}


